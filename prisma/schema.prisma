generator client {
  provider = "prisma-client-js" // this is the generator that creates the migrations, you can have more than one , like one for graph ql 
}

datasource db {
  provider = "postgresql" // name of db that u are using
  url      = env("DATABASE_URL") // link to db
}

model User {
  id    String  @id @unique @default(uuid()) //name , type , atributes, uuid's are random and unique
  email String  @unique
  name  String? // optional modifier
  posts Post[] // multiple modifier
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade) // relations , references the field inside te other table (foregin key) first parameter can be a string with a name
  authorId  String
}
